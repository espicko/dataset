{templateType Stepapo\Data\UI\Dataset\Item\ItemTemplate}

<tr{if $itemClassCallback} class="{$itemClassCallback($item)}"{/} n:snippet>
	{foreach $columns as $column}
		{if !$column->hide}
			{control attribute-$column->name}
		{/}
	{/}
	<td n:if="$buttons" n:inner-foreach="$buttons as $button" n:snippet="buttons">
		{control button-$button->name}
	</td>
</tr>
